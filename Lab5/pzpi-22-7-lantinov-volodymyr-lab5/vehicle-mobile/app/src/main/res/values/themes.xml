<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VehicleMonitor" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_green</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_purple</item>
        <item name="colorSecondaryVariant">@color/primary_light</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/gray_light</item>
        <item name="colorSurface">@color/white</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/primary_dark</item>
        <item name="android:textColorSecondary">@color/primary_light</item>

        <!-- Action bar -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <!-- Theme without ActionBar for VehicleDetailActivity -->
    <style name="Theme.VehicleMonitor.NoActionBar" parent="Theme.VehicleMonitor">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>